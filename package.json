{
  "name": "test-automation-starter",
  "version": "2.0.7",
  "description": "Starter kit for test-automation implementations in Docker",
  "scripts": {
    "auto-test:init": "cross-env NODE_ENV=development xvfb-run --server-args='-screen 0 1280x1024x24' chromedriver --port=9515 --log-path=/dev/stdout",
    "auto-test:run": "protractor ./conf/config.js",
    "prebuild": "del dist",
    "build": "babel src --out-dir dist",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "npm run auto-test:init & nodemon -e js,json -w src -w conf -x \"npm run start:dev\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "prerelease": "del test.tar.gz",
    "release": "cross-env NODE_ENV=production npm run build && node ./bin/compress",
    "start": "NODE_ENV=production bash ./bin/test",
    "start:dev": "cross-env NODE_ENV=development npm run build && npm run auto-test:run",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --recursive --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/test-automation-starter.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/test-automation-starter/issues"
  },
  "homepage": "https://github.com/fnalabs/test-automation-starter#readme",
  "author": "Adam Eilers",
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {
    "mocha": "~6.1.3",
    "protractor": "~5.4.2",
    "test-automation": "~2.0.7"
  },
  "devDependencies": {
    "@babel/cli": "~7.4.3",
    "@babel/core": "~7.4.3",
    "@babel/plugin-proposal-class-properties": "~7.4.0",
    "@babel/plugin-transform-modules-commonjs": "~7.4.3",
    "@babel/register": "~7.4.0",
    "archiver": "~3.0.0",
    "babel-eslint": "~10.0.1",
    "babel-plugin-add-module-exports": "~1.0.0",
    "babel-plugin-istanbul": "~5.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.26.2",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "codecov": "~3.3.0",
    "cross-env": "~5.2.0",
    "del-cli": "~1.1.0",
    "dirty-chai": "~2.0.1",
    "nodemon": "~1.18.11",
    "nyc": "~13.3.0",
    "proxyquire": "~2.1.0",
    "sinon": "~7.3.1",
    "standard": "~12.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
